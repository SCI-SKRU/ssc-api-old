{
  "name": "skru-ssc-api",
  "version": "0.2.1",
  "scripts": {
    "prepare": "npx husky install",
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "format": "rome format --write ./src/",
    "lint": "rome check ./src/",
    "build": "tsc",
    "migrate": "prisma migrate reset"
  },
  "dependencies": {
    "@hono/node-server": "^1.1.0",
    "@prisma/client": "^5.0.0",
    "dotenv": "^16.3.1",
    "hono": "^3.3.1",
    "redis": "^4.6.7",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/node": "^20.4.2",
    "husky": "^8.0.3",
    "prisma": "^5.0.0",
    "rome": "12.1.3",
    "tsx": "^3.12.2",
    "typescript": "^5.1.6"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
